{
  "ConnectionStrings": {
    "DefaultConnection": "Host=hospitalportal-db-server.postgres.database.azure.com;Port=5432;Database=hospitalportal;Username=postgres;Password=Eden@#$0606;SSL Mode=Require;Trust Server Certificate=true;Timeout=30;Command Timeout=30;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "your-secret-key-min-32-characters-change-this",
    "Secret": "your-secret-key-min-32-characters-change-this",
    "Issuer": "EyeHospitalAuth",
    "Audience": "EyeHospitalAPI",
    "ExpiryInMinutes": 60,
    "ExpireMinutes": 60
  },
  "PasswordPolicy": {
    "MinimumLength": 12,
    "DaysToExpire": 90,
    "InitialExpiryHours": 24,
    "FailedLoginLockoutMinutes": 15,
    "MaxFailedLoginAttempts": 5
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/auth-service-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "RateLimiting": {
    "GlobalLimits": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "QueueLimit": 2
    },
    "EndpointLimits": {
      "Auth": {
        "Login": {
          "PermitLimit": 5,
          "Window": "00:05:00",
          "QueueLimit": 0
        },
        "Register": {
          "PermitLimit": 2,
          "Window": "00:10:00",
          "QueueLimit": 0
        }
      }
    }
  }
}
